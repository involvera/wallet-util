{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "rootDirs": [
      "."
    ],
    "outDir": ".",
    "sourceMap": false,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": [
    "*.ts"
  ],
  "exclude": ["node_modules", "./*.d.ts", "./test/*.d.ts"]
}